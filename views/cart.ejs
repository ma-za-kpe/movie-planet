<!DOCTYPE html>
<html>
  <head>
    <%- include partials/head.ejs %>
  </head>
  <body>

    <!--header layout-->
    <%- include partials/header.ejs %>
     <!--header layout-->  
    </div>
  <!--/.Mask-->

    <!--header layout-->

    <div class="row checkout">
            <div class="col-8 tablau">
              <!--Main layout-->
      <main>
            <table class="table table-hover table-responsive-sm">
              <tbody>
                <thead><!-- Title -->
                  <td><h4 class="card-title">PROCEED TO BUY MOVIES, SERIES</h4></td>
                </thead>
                <tr>
                  <td>
                  <% if(movies) { %>
                  <% for (let i =0; i < movies.length; i++) { %>
                  <div class="card">
    
                  <!-- Card image -->
                  <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/images/43.jpg" alt="Card image cap">
                
                  <!-- Card content -->
                  <div class="card-body">
                
                    <!-- Title -->
                    <h4 class="card-title"><a><%= movies[i].movie.title %></a></h4>
                    <h4 class="card-text"><a>price: $<%= movies[i].price %></a></h4>
                    <h4 class="card-text"><a>qty: <span class="badge badge-secondary"><%= movies[i].qty %></span></a></h4>
                      <!-- Button -->
                    <a href="/checkout" class="btn btn-primary">Remove</a>
                  </div>
                  <% } %>

                </div>
                  <% } else { %>
                  <div>No items in cart!</div>
                  <% } %>
                    <!-- Card -->

    <!-- Card -->
                  </td>               
                    </tr>
        
                </tr>
              </tbody>
            </table>
          </main>
        <!--Main layout-->
    
            </div>
            <div class="col-4 payments">
             <!-- Title -->
        <h4 class="card-title"><a>TOTAL PRICE: $<%=totalPrice %> </a></h4>
        <h4 class="card-title"><a>PAYMENT OPTIONS</a></h4>
                <!-- Group of default radios - option 1 -->
<div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="defaultGroupExample1" name="groupOfDefaultRadios">
        <label class="custom-control-label" for="defaultGroupExample1">Pay on delivery</label>
      </div>
      
      <!-- Group of default radios - option 2 -->
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="defaultGroupExample2" name="groupOfDefaultRadios" checked>
        <label class="custom-control-label" for="defaultGroupExample2">MTN mobile money</label>
      </div>
      
      <!-- Group of default radios - option 3 -->
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="defaultGroupExample3" name="groupOfDefaultRadios">
        <label class="custom-control-label" for="defaultGroupExample3">Visa</label>
      </div>

      <!-- Button -->
      <a href="/movies/checkout" class="btn btn-primary">FINISH</a>

      <!-- Title -->
      <h5 class="card-title"><a>Download receipt as PDF</a></h5>

            </div>
          </div>



    <!--Footer-->
      <footer>

      </footer>
    <!--Footer-->

  </body>
</html>
